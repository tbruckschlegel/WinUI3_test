<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUI3_test1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI3_test1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI3_test1">
    <Grid>
        <!-- Define the controls for the browser -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Orientation="Horizontal" Margin="5">
            <Button Name="BrowserBack" Click="BackButton_Click" Margin="5" HorizontalAlignment="Center"/>
            <Button Name="BrowserForward" Click="ForwardButton_Click" Margin="5" HorizontalAlignment="Center"/>
            <Button Name="BrowserReload" Click="ReloadButton_Click" Margin="5" HorizontalAlignment="Center"/>
            <TextBox x:Name="UrlTextBox" Width="500" Margin="5" TextChanged="UrlTextBox_TextChanged"/>
            <Button Name="BrowserGo" Click="GoButton_Click" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- WebView control -->
        <WebView2 x:Name="MyWebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,50,0,0"/>
        
    </Grid>
</Window>
    